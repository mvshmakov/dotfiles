#! /usr/bin/env bash
#
# Inspired by https://github.com/tsoding/wisp
# TODO: rewrite this script to use on MacOS ARM

set -xe

ISO_PATH="$1"
QCOW2_IMAGE="$2"

qemu-img create -f qcow2 "$QCOW2_IMAGE" 20G
qemu-system-x86_64 \
    -enable-kvm \
    -m 4096 \
    -cdrom "$ISO_PATH" \
    -hda "$QCOW2_IMAGE" \
    -boot d
