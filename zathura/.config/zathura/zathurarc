# No sandbox (not a secure environment)
set sandbox none

# Paddings for the status bar
set statusbar-h-padding 0
set statusbar-v-padding 0

# Enable offsets for the pages
set page-padding 1

# Allow to copy text
set selection-clipboard clipboard

# Motions
map u scroll half-up
map d scroll half-down
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top
